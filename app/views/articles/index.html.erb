<h1>Articles</h1>
<h3>Tired of coding? Take a break and read some random articles.</h3>
<hr>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th>Published date</th>
      <th>Likes </th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.author %></td>
        <td><%= article.published_date %></td>
        <td><button type="button" onclick="hello(<%=article.id%>)">Like</button><td>
        <script type="text/javascript">
        var clicks = 0;
        function hello(id) {
            clicks += 1;
            document.getElementById("article_"+id).innerHTML = clicks;
        };
        </script>
        <p>Likes: <a id="<%= dom_id article %>">0</a></p>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

